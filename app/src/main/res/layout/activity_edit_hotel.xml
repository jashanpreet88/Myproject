<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:textSize="18dp"
        android:text="Hotel Name: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/hotel_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="Hotel Name"
        android:inputType="text" />
    <TextView
        android:textSize="18dp"
        android:text="Location: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/hotel_location_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="Location"
        android:inputType="text" />
    <TextView
        android:textSize="18dp"
        android:text="Ratings: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/hotel_rating_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="Rating"
        android:inputType="numberDecimal" />
    <TextView
        android:textSize="18dp"
        android:text="Image URL: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/hotel_image_url_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="Image URL"
        android:inputType="text" />
    <TextView
        android:textSize="18dp"
        android:text="Price per Night(CAD): "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/hotel_price_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="Price per Night"
        android:inputType="numberDecimal" />

    <CheckBox
        android:id="@+id/hotel_available_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available" />

    <Button
        android:id="@+id/update_hotel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Hotel" />

    <Button
        android:text="back"
        android:id="@+id/backbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>